<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1C1C1C"
    >

    <Button
        android:id="@+id/btnSpeedyEnglish300"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="182dp"
        android:background="#04B404"
        android:text="300 Words (Palavras)"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/btnSpeedyEnglish200"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:background="#04B404"
        android:text="200 Words (Palavras)"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/btnSpeedyEnglish"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:background="#04B404"
        android:text="100 Words (Palavras)"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/btnSobre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:text="Sobre"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="280dp"
        android:background="#04B404"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>